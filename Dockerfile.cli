FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy the entire package structure
COPY raspberry_buzzer ./raspberry_buzzer
COPY pyproject.toml ./

# Install the package with CLI-specific dependencies only
RUN pip install --no-cache-dir -e .[cli]

CMD ["python", "-m", "raspberry_buzzer.cli"]
